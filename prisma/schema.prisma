// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User Model
model User {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  phone         String    @unique
  password      String
  role          Role      @default(USER)
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  bookings      Booking[]
  payments      Payment[]
  sessions      Session[]
  accounts      Account[]

  @@index([email])
  @@index([phone])
}

enum Role {
  USER
  ADMIN
  SUPER_ADMIN
}

// NextAuth Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Time Slot Model
model TimeSlot {
  id          String   @id @default(cuid())
  date        DateTime @db.Date
  startTime   String   // Format: "08:00"
  endTime     String   // Format: "09:00"
  isAvailable Boolean  @default(true)
  price       Float    @default(1500.00) // KES
  maxBookings Int      @default(1) // Usually 1 for full pitch
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  bookings Booking[]

  @@unique([date, startTime, endTime])
  @@index([date])
  @@index([isAvailable])
}

// Booking Model
model Booking {
  id                String        @id @default(cuid())
  bookingReference  String        @unique @default(cuid())
  userId            String
  timeSlotId        String
  status            BookingStatus @default(PENDING)
  totalAmount       Float
  playerCount       Int           @default(1)
  notes             String?       @db.Text
  ticketUrl         String?       // S3/Cloudinary URL to PDF
  qrCode            String?       // Unique QR code for validation
  isValidated       Boolean       @default(false)
  validatedAt       DateTime?
  validatedBy       String?       // Admin user ID
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  user     User      @relation(fields: [userId], references: [id])
  timeSlot TimeSlot  @relation(fields: [timeSlotId], references: [id])
  payment  Payment?
  validation Validation?

  @@index([userId])
  @@index([timeSlotId])
  @@index([status])
  @@index([bookingReference])
  @@index([qrCode])
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
  NO_SHOW
}

// Payment Model
model Payment {
  id                  String        @id @default(cuid())
  bookingId           String        @unique
  userId              String
  amount              Float
  currency            String        @default("KES")
  paymentMethod       PaymentMethod
  mpesaReceiptNumber  String?       @unique // M-Pesa transaction ID
  mpesaPhoneNumber    String?
  checkoutRequestId   String?       @unique // STK push request ID
  merchantRequestId   String?
  status              PaymentStatus @default(PENDING)
  paidAt              DateTime?
  createdAt           DateTime      @default(now())
  updatedAt           DateTime      @updatedAt

  booking Booking @relation(fields: [bookingId], references: [id])
  user    User    @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([status])
  @@index([mpesaReceiptNumber])
}

enum PaymentMethod {
  MPESA
  CASH
  CARD
  BANK_TRANSFER
}

enum PaymentStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  REFUNDED
}

// Validation Model (for QR code scanning)
model Validation {
  id          String   @id @default(cuid())
  bookingId   String   @unique
  validatedBy String   // Admin user ID
  validatedAt DateTime @default(now())
  location    String?  // GPS coordinates or "Main Entrance"
  notes       String?

  booking Booking @relation(fields: [bookingId], references: [id])

  @@index([validatedBy])
  @@index([validatedAt])
}

// Analytics/Stats Model
model DailyStats {
  id              String   @id @default(cuid())
  date            DateTime @db.Date @unique
  totalBookings   Int      @default(0)
  totalRevenue    Float    @default(0)
  confirmedCount  Int      @default(0)
  cancelledCount  Int      @default(0)
  noShowCount     Int      @default(0)
  peakHour        String?  // "14:00-15:00"
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([date])
}

// System Settings
model Settings {
  id            String   @id @default(cuid())
  key           String   @unique
  value         String   @db.Text
  description   String?
  updatedAt     DateTime @updatedAt
  updatedBy     String?  // Admin user ID

  @@index([key])
}